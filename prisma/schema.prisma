// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider  = "prisma-client-js"
  js_bigint = true
}

model Conversion {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now()) @map("created_at")
  sourceAmount   String   @map("source_amount")
  sourceCurrency String   @map("source_currency")
  targetAmount   String   @map("target_amount")
  targetCurrency String   @map("target_currency")

  @@index([targetCurrency], map: "idx_conversion_target_currency")
  @@map("conversion")
}

model Statistic {
  id                          String   @id @default(uuid())
  createdAt                   DateTime @default(now()) @map("created_at")
  totalConversions            BigInt   @map("total_conversions")
  mostConvertedCurrency       String   @map("most_converted_currency")
  mostConvertedCurrencyAmount String   @map("most_converted_currency_amount")

  @@map("statistic")
}
