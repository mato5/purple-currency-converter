// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider  = "prisma-client-js"
  js_bigint = true
}

model Conversion {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now()) @map("created_at")
  sourceAmount   BigInt   @map("source_amount")
  sourceCurrency String   @map("source_currency")
  targetAmount   BigInt   @map("target_amount")
  targetCurrency String   @map("target_currency")

  @@index([targetCurrency], map: "idx_conversion_target_currency")
  @@map("conversion")
}
